{
  "name": "template",
  "version": "0.1.0",
  "description": "Template for creating node apps written in TS",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cdk": "cdk",
    "start": "source environment.sh && nodemon",
    "build:lambda": "esbuild ./src/lambda.ts --bundle --minify --outdir=dist --platform=node",
    "infra:deploy": "source environment.sh && cdk deploy --force --require-approval never",
    "infra:destroy": "source environment.sh && cdk destroy",
    "infra:diff": "source environment.sh && cdk diff"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.3.56",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.3",
    "esbuild": "^0.17.18",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@vendia/serverless-express": "^4.10.1",
    "aws-cdk": "^2.78.0",
    "aws-cdk-lib": "^2.78.0",
    "express": "^4.18.2"
  }
}
